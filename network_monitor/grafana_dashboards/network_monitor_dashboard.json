{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Network Monitoring Dashboard",
    "tags": ["network", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "type": "timeseries",
        "title": "Data Rate",
        "datasource": {
          "type": "mysql",
          "uid": "${DS_LOCAL}"
        },
        "targets": [
          {
            "rawSql": "SELECT timestamp AS time, bitrate AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Mbits"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Jitter",
        "datasource": {
          "type": "mysql",
          "uid": "${DS_LOCAL}"
        },
        "targets": [
          {
            "rawSql": "SELECT timestamp AS time, jitter AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Lost Packets",
        "datasource": {
          "type": "mysql",
          "uid": "${DS_LOCAL}"
        },
        "targets": [
          {
            "rawSql": "SELECT timestamp AS time, lost_percentage AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Latency",
        "datasource": {
          "type": "mysql",
          "uid": "${DS_LOCAL}"
        },
        "targets": [
          {
            "rawSql": "SELECT timestamp AS time, latency AS value FROM ping_results ORDER BY time ASC;",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        }
      },
      {
        "type": "scatter",
        "title": "Interruption Time",
        "datasource": {
          "type": "mysql",
          "uid": "${DS_LOCAL}"
        },
        "targets": [
          {
            "rawSql": "SELECT timestamp AS time, interruption_time AS value FROM interruptions ORDER BY time ASC;",
            "refId": "E"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "LocalNetworkMonitor",
          "type": "datasource",
          "pluginId": "mysql",
          "pluginName": "MySQL"
        }
      ]
    }
  },
  "overwrite": true,
  "inputs": [
    {
      "name": "LocalNetworkMonitor",
      "type": "datasource",
      "pluginId": "mysql",
      "value": "LocalNetworkMonitor"
    }
  ]
}
