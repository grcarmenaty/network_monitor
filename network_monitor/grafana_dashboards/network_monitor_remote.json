          {
            "datasource": {
              "type": "mysql",
              "uid": "RemoteNetworkMonitor"
            },
            "rawSql": "SELECT timestamp AS time, interruption_time AS value FROM interruptions ORDER BY time ASC;",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "lineWidth": 0,
              "fillOpacity": 0,
              "pointSize": 5
            }
          }
