{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Network Monitoring Dashboard (Bidirectional)",
    "tags": ["network", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "type": "timeseries",
        "title": "Data Rate",
        "targets": [
          {
            "datasource": {
              "type": "mysql",
              "uid": "LocalNetworkMonitor"
            },
            "rawSql": "SELECT timestamp AS time, bitrate AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "A"
          },
          {
            "datasource": {
              "type": "mysql",
              "uid": "RemoteNetworkMonitor"
            },
            "rawSql": "SELECT timestamp AS time, bitrate AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Mbits"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Jitter",
        "targets": [
          {
            "datasource": {
              "type": "mysql",
              "uid": "LocalNetworkMonitor"
            },
            "rawSql": "SELECT timestamp AS time, jitter AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "A"
          },
          {
            "datasource": {
              "type": "mysql",
              "uid": "RemoteNetworkMonitor"
            },
            "rawSql": "SELECT timestamp AS time, jitter AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Lost Packets",
        "targets": [
          {
            "datasource": {
              "type": "mysql",
              "uid": "LocalNetworkMonitor"
            },
            "rawSql": "SELECT timestamp AS time, lost_percentage AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "A"
          },
          {
            "datasource": {
              "type": "mysql",
              "uid": "RemoteNetworkMonitor"
            },
            "rawSql": "SELECT timestamp AS time, lost_percentage AS value FROM iperf_results ORDER BY time ASC;",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "type": "timeseries",
        "title": "Latency",
        "targets": [
          {
            "datasource": {
              "type": "mysql",
              "uid": "LocalNetworkMonitor"
            },
            "rawSql": "SELECT timestamp AS time, latency AS value FROM ping_results ORDER BY time ASC;",
